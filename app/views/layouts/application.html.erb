<!DOCTYPE html>
<html>
<head>
  <title>OneTR</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="user_nav">
  <% if current_user %>
    Logged in as <%= current_user.username %>.
    <%= link_to "Log out", :controller => :sessions, :action => :destroy, :method => :delete %>
  <% else %>
    <%= link_to "Sign up", :controller => :users, :action => :new %> or
    <%= link_to "log in", :controller => :sessions, :action => :new %>
  <% end %>
</div>
<div id="navigation">
  <%= link_to "Users", users_path %>
  <%= link_to "My Rubrics", rubrics_path %>
  <%= link_to "My Positives", positives_path %>
</div>
<%= yield %>

</body>
</html>
